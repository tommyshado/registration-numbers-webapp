<div class="container">
    <nav>
        <h1>Mthunzi Tom | Registration Numbers App</h1>
    </nav>

    <main class="enterRegNum">
        <h2>Mbhaliso Mangama App</h1>

        {{#if messages.error}}
            <div class="messages alert alert-danger">{{messages.error}}</div>
        {{/if}}
        {{#if messages.success}}
            <div class="messages alert alert-success">{{messages.success}}</div>
        {{/if}}

        <div class="regContainer">

            <form action="/addRegNumber" method="post">
                <div class="inputContainer">
                    <label for="regNumberInput">Enter registration number:</label>
                    <input type="text" name="reg" id="regNum" placeholder="Enter a registration number">
                    <span id="buttons">
                        <button class="allButtons" type="submit" id="addButton">Add</button>
                    </span>
                </div>
            </form>

            <form action="/filter" method="post">

                <div class="filterContainer">

                    {{#each towns}}
                        <label class="radioContainer">
                            <input type="radio" name="regNumber" value="{{town_code}}" class="radioButton">
                            <strong><span class="label-body">{{town}} ({{town_code}})</span></strong>
                        </label>
                    {{/each}}

                    <label class="radioContainer">
                        <input type="radio" name="regNumber" value="all" class="radioButton">
                        <strong><span class="label-body">All</span></strong>
                    </label>

                    <span id="buttons">
                        <button class="allButtons" type="submit" id="showButton">Show</button>
                    </span>
                </div>

            </form>

             <form action="/reset" method="post">
                <div id="resetButton">
                    <span>
                        <button class="allButtons" type="submit" onclick="return resetOnClick()">Reset</button>
                    </span>
                </div>
            </form> 
  
        </div>

    </main>

    <div class="displayRegNum">
        <h3>Entered Registration Numbers:</h2>

        <div class="regNumbers">
        {{#each regNumbers}}
                <li id="regNumberPlate">{{reg_number}}</li>
        {{/each}}
        </div>

    </div>

    <footer>mthunzitom@gmail.com</footer>

</div>

<script>
    setTimeout(function() {
        const messages = document.querySelector(".messages");
        if (messages) {
            messages.style.display = "none";
        };
    }, 3000);

    function resetOnClick() {
        return confirm("Are you sure you want to delete the data?");
    }
</script>