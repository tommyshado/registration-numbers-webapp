<div class="container">
    <nav>
        <h1>Mthunzi Tom | Registration Numbers App</h1>
    </nav>

    <main class="enterRegNum">
        <h2>Mbhaliso Mangama App</h1>

        <div class="messages">{{messages}}</div>

        <div class="regContainer">

            <form action="/sendRegNumber" method="post">
                <div class="inputContainer">
                    <label for="regNumberInput">Enter registration number:</label>
                    <input type="text" name="regNumberInput" id="regNum" placeholder="Enter a registration number">
                    <button type="submit" id="addButton">Add</button>
                </div>
            </form>

            <form action="/reset" method="post">
                <div id="resetButton">
                    <button type="submit" onclick="(resetOnClick())">Reset</button>
                </div>
            </form>

            <form action="/filter" method="post">

                <div class="filterContainer">

                    <label class="radioContainer">
                        <input type="radio" name="regNumber" value="1" class="radioButton">
                        <strong><span class="label-body">Cape Town(ca)</span></strong>
                    </label>

                    <label class="radioContainer">
                        <input type="radio" name="regNumber" value="2" class="radioButton">
                        <strong><span class="label-body">STELLENBOSCH(cl)</span></strong>
                    </label>

                    <label class="radioContainer">
                        <input type="radio" name="regNumber" value="3" class="radioButton">
                        <strong><span class="label-body">PAARL(cj)</span></strong>
                    </label>

                    <button type="submit" id="showButton">Show</button>
                </div>

            </form>
            
        </div>

    </main>

    <div class="displayRegNum">
        <h3>Entered Registration Numbers:</h2>

        <div class="regNumbers">
        {{#each registrationNumbers}}
                <li id="regNumberPlate">{{this}}</li>
        {{/each}}
        </div>

    </div>

    <footer>mthunzitom@gmail.com</footer>

</div>

<script>
    setTimeout(function() {
        const messages = document.querySelector(".messages");
        if (messages) {
            messages.style.display = "none";
        };
    }, 3000);

    function resetOnClick() {
        return confirm("Are you sure you want to delete the data?");
    }
</script>